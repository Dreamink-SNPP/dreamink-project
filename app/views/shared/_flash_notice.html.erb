<div class="bg-white border-l-4 border-green-500 rounded-lg shadow-lg p-3 sm:p-4 pointer-events-auto transform transition-all duration-300 ease-out"
     data-controller="flash"
     data-flash-delay-value="5000"
     data-flash-initial-class="translate-x-full opacity-0"
     data-flash-enter-class="translate-x-0 opacity-100"
     data-flash-exit-class="translate-x-full opacity-0">
  <div class="flex items-start gap-2 sm:gap-3">
    <div class="shrink-0">
      <%= heroicon "check-circle", class: "h-4 w-4 sm:h-5 sm:w-5 text-green-500" %>
    </div>
    <div class="flex-1 min-w-0">
      <p class="text-xs sm:text-sm font-medium text-gray-900 break-word"><%= message %></p>
    </div>
    <button type="button"
            data-action="click->flash#close"
            class="shrink-0 inline-flex text-gray-400 hover:text-gray-600 transition">
      <span class="sr-only">Cerrar</span>
      <%= heroicon "x-mark", class: "h-4 w-4 sm:h-5 sm:w-5" %>
    </button>
  </div>
</div>
