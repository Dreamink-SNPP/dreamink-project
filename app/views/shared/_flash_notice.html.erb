<div
  class="pointer-events-auto transform rounded-lg border-l-4 border-green-500 bg-white p-3 shadow-lg transition-all duration-300 ease-out sm:p-4"
  data-controller="flash"
  data-flash-delay-value="5000"
  data-flash-initial-class="translate-x-full opacity-0"
  data-flash-enter-class="translate-x-0 opacity-100"
  data-flash-exit-class="translate-x-full opacity-0"
>
  <div class="flex items-start gap-2 sm:gap-3">
    <div class="shrink-0">
      <svg class="h-4 w-4 text-green-500 sm:h-5 sm:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
    </div>
    <div class="min-w-0 flex-1">
      <p class="break-word text-xs font-medium text-gray-900 sm:text-sm"><%= message %></p>
    </div>
    <button
      type="button"
      data-action="click->flash#close"
      class="inline-flex shrink-0 text-gray-400 transition hover:text-gray-600"
    >
      <span class="sr-only">Cerrar</span>
      <svg class="h-4 w-4 sm:h-5 sm:w-5" viewBox="0 0 20 20" fill="currentColor">
        <path
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"
        />
      </svg>
    </button>
  </div>
</div>
