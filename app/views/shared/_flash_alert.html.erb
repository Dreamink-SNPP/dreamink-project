<div class="bg-white border-l-4 border-red-500 rounded-lg shadow-lg p-4 pointer-events-auto transform transition-all duration-300 ease-out"
     data-controller="flash"
     data-flash-delay-value="5000"
     data-flash-initial-class="translate-x-full opacity-0"
     data-flash-enter-class="translate-x-0 opacity-100"
     data-flash-exit-class="translate-x-full opacity-0">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="ml-3 flex-1">
      <p class="text-sm font-medium text-gray-900"><%= message %></p>
    </div>
    <button type="button"
            data-action="click->flash#close"
            class="ml-3 inline-flex text-gray-400 hover:text-gray-600 transition">
      <span class="sr-only">Cerrar</span>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
      </svg>
    </button>
  </div>
</div>
