<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-3 mb-4">
      <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">
        Ideas
      </h1>
    </div>

    <div class="flex items-center justify-between">
      <p class="text-sm text-gray-600">
        Proyecto: <span class="font-medium"><%= @project.title %></span>
      </p>
      <%= link_to new_project_idea_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nueva Idea
      <% end %>
    </div>

    <!-- BÃºsqueda -->
    <div class="mt-6">
      <%= form_with url: search_project_ideas_path(@project), method: :get, class: "flex gap-3" do |form| %>
        <div class="flex-1">
          <%= form.text_field :q,
                              value: params[:q],
                              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                              placeholder: "Buscar ideas por tÃ­tulo o contenido..." %>
        </div>
        <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
        <% if params[:q].present? %>
          <%= link_to "Limpiar", project_ideas_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      <% end %>
    </div>

    <!-- Tags populares -->
    <%
      all_tags = @project.ideas.flat_map(&:tag_list).compact.uniq.sort
      if all_tags.any? && params[:tag].blank? && params[:q].blank?
    %>
      <div class="mt-4">
        <p class="text-xs font-medium text-gray-700 mb-2">Filtrar por tag:</p>
        <div class="flex flex-wrap gap-2">
          <% all_tags.each do |tag| %>
            <%= link_to project_ideas_path(@project, tag: tag),
                        class: "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 hover:bg-gray-200 transition" do %>
              #<%= tag %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Filtro activo -->
    <% if params[:tag].present? %>
      <div class="mt-4 inline-flex items-center px-3 py-2 rounded-md bg-indigo-50 border border-indigo-200">
        <span class="text-sm text-indigo-800">
          Filtrando por: <span class="font-semibold">#<%= params[:tag] %></span>
        </span>
        <%= link_to project_ideas_path(@project), class: "ml-2 text-indigo-600 hover:text-indigo-900" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Lista de ideas -->
  <% if @ideas.any? %>
    <div class="space-y-4">
      <% @ideas.each do |idea| %>
        <div class="bg-white shadow rounded-lg hover:shadow-lg transition duration-150 ease-in-out overflow-hidden">
          <div class="p-6">
            <!-- Header con fecha -->
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  ðŸ’¡ <%= idea.title %>
                </h3>
                <p class="text-xs text-gray-500">
                  <%= time_ago_in_words(idea.created_at) %> â€¢
                  <%= idea.created_at.strftime("%d/%m/%Y %H:%M") %>
                </p>
              </div>

              <!-- Botones de acciÃ³n -->
              <div class="flex space-x-2 ml-4">
                <%= link_to edit_project_idea_path(@project, idea),
                            class: "text-indigo-600 hover:text-indigo-900 p-1" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>

                <%= button_to project_idea_path(@project, idea),
                              method: :delete,
                              data: { turbo_confirm: "Â¿EstÃ¡s seguro de eliminar esta idea?" },
                              class: "text-red-600 hover:text-red-900 p-1" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>

            <!-- DescripciÃ³n -->
            <% if idea.description.present? %>
              <p class="text-gray-700 whitespace-pre-wrap mb-3">
                <%= idea.description %>
              </p>
            <% end %>

            <!-- Tags -->
            <% if idea.tag_list.any? %>
              <div class="flex flex-wrap gap-2 mt-3 pt-3 border-t border-gray-100">
                <% idea.tag_list.each do |tag| %>
                  <%= link_to project_ideas_path(@project, tag: tag),
                              class: "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 hover:bg-indigo-200 transition" do %>
                    #<%= tag %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Estado vacÃ­o -->
    <div class="text-center py-12 bg-white shadow rounded-lg">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">
        <%= params[:q].present? || params[:tag].present? ? "No se encontraron ideas" : "No hay ideas" %>
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        <%= params[:q].present? || params[:tag].present? ? "Intenta con otros tÃ©rminos de bÃºsqueda" : "Comienza capturando tus ideas sueltas aquÃ­" %>
      </p>
      <% if params[:q].blank? && params[:tag].blank? %>
        <div class="mt-6">
          <%= link_to new_project_idea_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Crear Idea
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
