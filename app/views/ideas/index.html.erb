<%= render "shared/project_navigation", project: @project %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="scroll-to-top">
  <!-- Header -->
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <!-- Título y navegación -->
      <div class="flex items-center space-x-3 mb-4 sm:mb-0">
        <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500 transition" do %>
          <%= heroicon "chevron-left", size: "5" %>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Ideas
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= @project.title %>
          </p>
        </div>
      </div>

      <!-- Acciones -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to collection_report_project_ideas_path(@project, format: :pdf),
                    target: "_blank",
                    class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
          <%= heroicon "document-text", class: "-ml-1 mr-2 h-5 w-5 text-red-600" %>
          Reporte PDF Completo
        <% end %>

        <%= link_to new_project_idea_path(@project), class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
          <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
          Nueva Idea
        <% end %>
      </div>
    </div>

    <!-- Búsqueda -->
    <div class="mt-6">
      <%= form_with url: search_project_ideas_path(@project), method: :get, class: "flex gap-3" do |form| %>
        <div class="flex-1">
          <%= form.text_field :q,
                              value: params[:q],
                              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm",
                              placeholder: "Buscar ideas por título o contenido..." %>
        </div>
        <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer" %>
        <% if params[:q].present? %>
          <%= link_to "Limpiar", project_ideas_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
        <% end %>
      <% end %>
    </div>

    <!-- Tags populares -->
    <%
      all_tags = @project.ideas.flat_map(&:tag_list).compact.uniq.sort
      if all_tags.any? && params[:tag].blank? && params[:q].blank?
    %>
      <div class="mt-4">
        <p class="text-xs font-medium text-gray-700 mb-2">Filtrar por tag:</p>
        <div class="flex flex-wrap gap-2">
          <% all_tags.each do |tag| %>
            <%= link_to project_ideas_path(@project, tag: tag),
                        class: "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 hover:bg-gray-200 transition" do %>
              #<%= tag %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Filtro activo -->
    <% if params[:tag].present? %>
      <div class="mt-4 inline-flex items-center px-3 py-2 rounded-md bg-primary-50 border border-primary-200">
        <span class="text-sm text-primary-800">
          Filtrando por: <span class="font-semibold">#<%= params[:tag] %></span>
        </span>
        <%= link_to project_ideas_path(@project), class: "ml-2 text-primary hover:text-primary-900" do %>
          <%= heroicon "x-mark", size: "4" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Lista de ideas -->
  <% if @ideas.any? %>
    <div class="space-y-4">
      <% @ideas.each do |idea| %>
        <div class="bg-white shadow rounded-lg hover:shadow-lg transition duration-150 ease-in-out overflow-hidden">
          <div class="p-6">
            <!-- Header con fecha -->
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-1 flex items-center gap-2">
                  <%= heroicon "light-bulb", size: "5", class: "text-yellow-500 shrink-0" %>
                  <%= idea.title %>
                </h3>
                <p class="text-xs text-gray-500">
                  <%= time_ago_in_words(idea.created_at) %> •
                  <%= idea.created_at.strftime("%d/%m/%Y %H:%M") %>
                </p>
              </div>

              <!-- Botones de acción -->
              <div class="flex shrink-0 gap-2 ml-4">
                <%= link_to report_project_idea_path(@project, idea, format: :pdf),
                            target: "_blank",
                            class: "text-red-600 hover:text-red-700 p-1 transition",
                            title: "Generar PDF" do %>
                  <%= heroicon "document-text", size: "5" %>
                <% end %>

                <%= link_to edit_project_idea_path(@project, idea),
                            class: "text-primary hover:text-secondary-dark p-1 transition",
                            title: "Editar" do %>
                  <%= heroicon "pencil", size: "5" %>
                <% end %>

                <%= button_to project_idea_path(@project, idea),
                              method: :delete,
                              data: { turbo_confirm: "¿Estás seguro de eliminar esta idea?" },
                              class: "text-red-600 hover:text-red-700 p-1 transition",
                              title: "Eliminar" do %>
                  <%= heroicon "trash", size: "5" %>
                <% end %>
              </div>
            </div>

            <!-- Descripción -->
            <% if idea.description.present? %>
              <p class="text-gray-700 whitespace-pre-wrap mb-3">
                <%= idea.description %>
              </p>
            <% end %>

            <!-- Tags -->
            <% if idea.tag_list.any? %>
              <div class="flex flex-wrap gap-2 mt-3 pt-3 border-t border-gray-100">
                <% idea.tag_list.each do |tag| %>
                  <%= link_to project_ideas_path(@project, tag: tag),
                              class: "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800 hover:bg-primary-200 transition" do %>
                    #<%= tag %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Estado vacío -->
    <div class="text-center py-12 bg-white shadow rounded-lg">
      <%= heroicon "light-bulb", size: "12", class: "mx-auto text-gray-400" %>
      <h3 class="mt-2 text-sm font-medium text-gray-900">
        <%= params[:q].present? || params[:tag].present? ? "No se encontraron ideas" : "No hay ideas" %>
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        <%= params[:q].present? || params[:tag].present? ? "Intenta con otros términos de búsqueda" : "Comienza capturando tus ideas sueltas aquí" %>
      </p>
      <% if params[:q].blank? && params[:tag].blank? %>
        <div class="mt-6">
          <%= link_to new_project_idea_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
            <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
            Crear Idea
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Scroll to Top Button -->
  <button type="button"
          data-scroll-to-top-target="button"
          data-action="click->scroll-to-top#scrollToTop"
          class="hidden fixed bottom-6 right-6 z-40 p-3 sm:p-4 bg-primary text-white rounded-full shadow-lg hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-300 opacity-0"
          aria-label="Scroll to top">
    <%= heroicon "arrow-up", class: "h-5 w-5 sm:h-6 sm:w-6" %>
  </button>
</div>
