<%= render "shared/project_navigation", project: @project %>

<div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8" data-controller="scroll-to-top">
  <!-- Header -->
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <!-- TÃ­tulo y navegaciÃ³n -->
      <div class="mb-4 flex items-center space-x-3 sm:mb-0">
        <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500 transition" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Ideas</h1>
          <p class="mt-1 text-sm text-gray-500"><%= @project.title %></p>
        </div>
      </div>

      <!-- Acciones -->
      <div class="flex flex-col gap-3 sm:flex-row">
        <%= link_to collection_report_project_ideas_path(@project, format: :pdf), target: "_blank", class: "inline-flex
        items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium
        text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary
        transition" do %>
        <svg class="mr-2 -ml-1 h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
          />
        </svg>
        Reporte PDF Completo <% end %> <%= link_to new_project_idea_path(@project), class: "inline-flex items-center
        justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white
        bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary
        transition" do %>
        <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nueva Idea <% end %>
      </div>
    </div>

    <!-- BÃºsqueda -->
    <div class="mt-6">
      <%= form_with url: search_project_ideas_path(@project), method: :get, class: "flex gap-3" do |form| %>
      <div class="flex-1">
        <%= form.text_field :q, value: params[:q], class: "block w-full rounded-md border-gray-300 shadow-sm
        focus:border-primary focus:ring-primary sm:text-sm", placeholder: "Buscar ideas por tÃ­tulo o contenido..." %>
      </div>
      <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md
      shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2
      focus:ring-offset-2 focus:ring-primary cursor-pointer" %> <% if params[:q].present? %> <%= link_to "Limpiar",
      project_ideas_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md
      shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2
      focus:ring-offset-2 focus:ring-primary" %> <% end %> <% end %>
    </div>

    <!-- Tags populares -->
    <% all_tags = @project.ideas.flat_map(&:tag_list).compact.uniq.sort if all_tags.any? && params[:tag].blank? &&
    params[:q].blank? %>
    <div class="mt-4">
      <p class="mb-2 text-xs font-medium text-gray-700">Filtrar por tag:</p>
      <div class="flex flex-wrap gap-2">
        <% all_tags.each do |tag| %> <%= link_to project_ideas_path(@project, tag: tag), class: "inline-flex
        items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 hover:bg-gray-200 transition"
        do %> #<%= tag %> <% end %> <% end %>
      </div>
    </div>
    <% end %>

    <!-- Filtro activo -->
    <% if params[:tag].present? %>
    <div class="bg-primary-50 border-primary-200 mt-4 inline-flex items-center rounded-md border px-3 py-2">
      <span class="text-primary-800 text-sm">
        Filtrando por:
        <span class="font-semibold">#<%= params[:tag] %></span>
      </span>
      <%= link_to project_ideas_path(@project), class: "ml-2 text-primary hover:text-primary-900" do %>
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      <% end %>
    </div>
    <% end %>
  </div>

  <!-- Lista de ideas -->
  <% if @ideas.any? %>
  <div class="space-y-4">
    <% @ideas.each do |idea| %>
    <div class="overflow-hidden rounded-lg bg-white shadow transition duration-150 ease-in-out hover:shadow-lg">
      <div class="p-6">
        <!-- Header con fecha -->
        <div class="mb-3 flex items-start justify-between">
          <div class="flex-1">
            <h3 class="mb-1 text-lg font-semibold text-gray-900">ðŸ’¡ <%= idea.title %></h3>
            <p class="text-xs text-gray-500">
              <%= time_ago_in_words(idea.created_at) %> â€¢ <%= idea.created_at.strftime("%d/%m/%Y %H:%M") %>
            </p>
          </div>

          <!-- Botones de acciÃ³n -->
          <div class="ml-4 flex shrink-0 gap-2">
            <%= link_to report_project_idea_path(@project, idea, format: :pdf), target: "_blank", class: "text-red-600
            hover:text-red-700 p-1 transition", title: "Generar PDF" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
              />
            </svg>
            <% end %> <%= link_to edit_project_idea_path(@project, idea), class: "text-primary hover:text-secondary-dark
            p-1 transition", title: "Editar" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
              />
            </svg>
            <% end %> <%= button_to project_idea_path(@project, idea), method: :delete, data: { turbo_confirm: "Â¿EstÃ¡s
            seguro de eliminar esta idea?" }, class: "text-red-600 hover:text-red-700 p-1 transition", title: "Eliminar"
            do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              />
            </svg>
            <% end %>
          </div>
        </div>

        <!-- DescripciÃ³n -->
        <% if idea.description.present? %>
        <p class="mb-3 whitespace-pre-wrap text-gray-700"><%= idea.description %></p>
        <% end %>

        <!-- Tags -->
        <% if idea.tag_list.any? %>
        <div class="mt-3 flex flex-wrap gap-2 border-t border-gray-100 pt-3">
          <% idea.tag_list.each do |tag| %> <%= link_to project_ideas_path(@project, tag: tag), class: "inline-flex
          items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800
          hover:bg-primary-200 transition" do %> #<%= tag %> <% end %> <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <% else %>
  <!-- Estado vacÃ­o -->
  <div class="rounded-lg bg-white py-12 text-center shadow">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
      />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">
      <%= params[:q].present? || params[:tag].present? ? "No se encontraron ideas" : "No hay ideas" %>
    </h3>
    <p class="mt-1 text-sm text-gray-500">
      <%= params[:q].present? || params[:tag].present? ? "Intenta con otros tÃ©rminos de bÃºsqueda" : "Comienza capturando
      tus ideas sueltas aquÃ­" %>
    </p>
    <% if params[:q].blank? && params[:tag].blank? %>
    <div class="mt-6">
      <%= link_to new_project_idea_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent
      shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark focus:outline-none
      focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
      <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Crear Idea <% end %>
    </div>
    <% end %>
  </div>
  <% end %>

  <!-- Scroll to Top Button -->
  <button
    type="button"
    data-scroll-to-top-target="button"
    data-action="click->scroll-to-top#scrollToTop"
    class="bg-primary hover:bg-secondary-dark focus:ring-primary fixed right-6 bottom-6 z-40 hidden rounded-full p-3 text-white opacity-0 shadow-lg transition-all duration-300 focus:ring-2 focus:ring-offset-2 focus:outline-none sm:p-4"
    aria-label="Scroll to top"
  >
    <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
    </svg>
  </button>
</div>
