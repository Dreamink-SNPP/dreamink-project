<div class="min-h-screen bg-gray-100">
  <!-- Header fijo -->
  <div class="bg-white shadow-sm sticky top-0 z-10">
    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <!-- Título y breadcrumb -->
        <div class="flex items-center space-x-3">
          <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">
              Estructura Dramática
            </h1>
            <p class="text-sm text-gray-600">
              <%= @project.title %>
            </p>
          </div>
        </div>

        <!-- Botón para agregar acto -->
        <button type="button"
                onclick="openNewActModal()"
                class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nuevo Acto
        </button>
      </div>

      <!-- Estadísticas rápidas -->
      <div class="mt-4 flex space-x-6 text-sm text-gray-600">
        <div class="flex items-center">
          <span class="font-semibold mr-1"><%= @acts.count %></span>
          <%= @acts.count == 1 ? "Acto" : "Actos" %>
        </div>
        <div class="flex items-center">
          <span class="font-semibold mr-1"><%= @project.sequences.count %></span>
          <%= @project.sequences.count == 1 ? "Secuencia" : "Secuencias" %>
        </div>
        <div class="flex items-center">
          <span class="font-semibold mr-1"><%= @project.scenes.count %></span>
          <%= @project.scenes.count == 1 ? "Escena" : "Escenas" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tablero Kanban -->
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <% if @acts.any? %>
      <!-- Contenedor horizontal con scroll -->
      <div class="flex space-x-4 overflow-x-auto pb-4">
        <% @acts.each do |act| %>
          <%= render "structures/act_column", act: act, project: @project %>
        <% end %>
      </div>
    <% else %>
      <!-- Estado vacío -->
      <div class="text-center py-20 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Sin estructura</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza creando el primer acto de
          tu historia.</p>
        <div class="mt-6">
          <button type="button"
                  onclick="openNewActModal()"
                  class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Crear Primer Acto
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Modales -->
  <!-- Modal para Nuevo Acto -->
  <div data-controller="modal"
       id="new-act-modal"
       class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
           data-action="click->modal#close"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
      <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Nuevo Acto</h3>
            <button type="button"
                    data-action="click->modal#close"
                    class="bg-white rounded-md text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <%= render "acts/form", act: @project.acts.build %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para Nueva Secuencia -->
  <div data-controller="modal"
       id="new-sequence-modal"
       class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
           data-action="click->modal#close"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
      <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Nueva Secuencia</h3>
            <button type="button"
                    data-action="click->modal#close"
                    class="bg-white rounded-md text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <div id="new-sequence-form-container">
            <!-- Se llenará dinámicamente -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para Nueva Escena -->
  <div data-controller="modal"
       id="new-scene-modal"
       class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
           data-action="click->modal#close"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
      <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Nueva Escena</h3>
            <button type="button"
                    data-action="click->modal#close"
                    class="bg-white rounded-md text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <div id="new-scene-form-container">
            <!-- Se llenará dinámicamente -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
      // Función para abrir modal de nuevo acto
      window.openNewActModal = function () {
          const modal = document.getElementById('new-act-modal')
          modal.classList.remove('hidden')
          document.body.style.overflow = 'hidden'
      }

      // Función para abrir modal de nueva secuencia
      window.openNewSequenceModal = function (actId) {
          fetch(`/projects/<%= @project.id %>/acts/${actId}/sequences/new_modal`)
              .then(response => response.text())
              .then(html => {
                  document.getElementById('new-sequence-form-container').innerHTML = html
                  const modal = document.getElementById('new-sequence-modal')
                  modal.classList.remove('hidden')
                  document.body.style.overflow = 'hidden'
              })
      }

      // Función para abrir modal de nueva escena
      window.openNewSceneModal = function (sequenceId) {
          fetch(`/projects/<%= @project.id %>/sequences/${sequenceId}/scenes/new_modal`)
              .then(response => response.text())
              .then(html => {
                  document.getElementById('new-scene-form-container').innerHTML = html
                  const modal = document.getElementById('new-scene-modal')
                  modal.classList.remove('hidden')
                  document.body.style.overflow = 'hidden'
              })
      }

      // Cerrar modales al presionar ESC
      document.addEventListener('keydown', function (e) {
          if (e.key === 'Escape') {
              document.querySelectorAll('[data-controller="modal"]').forEach(modal => {
                  modal.classList.add('hidden')
              })
              document.body.style.overflow = 'auto'
          }
      })

      // Listener para cerrar modal después de crear
      document.addEventListener('turbo:submit-end', function (e) {
          if (e.detail.success) {
              document.querySelectorAll('[data-controller="modal"]').forEach(modal => {
                  modal.classList.add('hidden')
              })
              document.body.style.overflow = 'auto'
          }
      })

      // Función auxiliar para cerrar modal
      window.closeModal = function (modalId) {
          const modal = document.getElementById(modalId)
          modal.classList.add('hidden')
          document.body.style.overflow = 'auto'
      }
  </script>

</div>