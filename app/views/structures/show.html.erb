<div class="min-h-screen bg-gray-100"
     data-controller="structure"
     data-structure-project-id-value="<%= @project.id %>">

  <!-- Header fijo -->
  <div class="bg-white shadow-sm sticky top-0 z-10">
    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="sm:flex sm:items-center sm:justify-between">
        <!-- T칤tulo y breadcrumb -->
        <div class="flex items-center space-x-3 mb-4 sm:mb-0 min-w-0">
          <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500 shrink-0" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <div class="min-w-0">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900">
              Estructura Dram치tica
            </h1>
            <p class="text-sm text-gray-600 truncate">
              <%= @project.title %>
            </p>
          </div>
        </div>

        <!-- Botones de acci칩n -->
        <div class="flex flex-col sm:flex-row gap-2 w-full sm:w-auto">
          <%= link_to fountain_export_project_path(@project),
                      class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary shrink-0" do %>
            <svg class="-ml-1 mr-2 h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            Exportar Fountain
          <% end %>

          <button type="button"
                  data-action="click->structure#openNewActModal"
                  class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary shrink-0">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nuevo Acto
          </button>
        </div>
      </div>

      <!-- Estad칤sticas r치pidas -->
      <div id="statistics_counters">
        <%= render "structures/statistics", acts_count: @acts.count, sequences_count: @project.sequences.count, scenes_count: @project.scenes.count %>
      </div>

      <!-- Botones expandir/colapsar - USANDO CONTROLLER -->
      <% if @acts.any? && @project.sequences.any? %>
        <div class="mt-4 flex space-x-2" data-controller="expand-collapse">
          <button type="button"
                  data-action="click->expand-collapse#expandAll"
                  class="text-sm px-3 py-1 rounded border border-gray-300 hover:bg-gray-50 text-gray-700 transition">
            游닀 Expandir Todo
          </button>
          <button type="button"
                  data-action="click->expand-collapse#collapseAll"
                  class="text-sm px-3 py-1 rounded border border-gray-300 hover:bg-gray-50 text-gray-700 transition">
            游늿 Colapsar Todo
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Tablero Kanban -->
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <% if @acts.any? %>
      <!-- Contenedor horizontal con scroll -->
      <div id="acts_container"
           class="flex space-x-4 overflow-x-auto pb-4">
        <%= render "structures/acts_list", acts: @acts, project: @project %>
      </div>
    <% else %>
      <!-- Estado vac칤o -->
      <div class="text-center py-20 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Sin estructura</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza creando el primer acto de tu historia.</p>
        <div class="mt-6">
          <button type="button"
                  data-action="click->structure#openNewActModal"
                  class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Crear Primer Acto
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ================================================ -->
  <!-- MODALES -->
  <!-- ================================================ -->

  <!-- Modal para Nuevo Acto -->
  <div data-structure-target="newActModal"
       class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity modal-overlay"
           data-action="click->structure#closeModal"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
      <div class="modal-content relative z-10 inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Nuevo Acto</h3>
            <button type="button"
                    data-action="click->structure#closeModal"
                    class="bg-white rounded-md text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <div id="new_act_modal_content" data-modal-content>
            <%= render "acts/form", act: @project.acts.build %>
          </div>
        </div>
      </div>
    </div>
  </div>

