<!-- Tarjeta de Secuencia -->
<div id="sequence_<%= sequence.id %>"
     class="sequence-card bg-gray-50 rounded-lg border-2 border-gray-200 shadow-sm hover:shadow-md transition-shadow w-full md:flex md:flex-col md:h-auto xl:w-80 xl:flex-shrink-0 xl:h-[calc(100vh-400px)]"
     data-controller="collapsible"
     data-collapsible-storage-key-value="sequence">

  <!-- Header de la Secuencia -->
  <div class="p-3 border-b border-gray-200">
    <div class="flex items-start justify-between gap-2">
      <div class="flex-1 min-w-0">
        <h4 class="text-sm font-semibold text-gray-900 truncate">
          <%= sequence.title %>
        </h4>
        <% if sequence.description.present? %>
          <p class="mt-1 text-xs text-gray-600 line-clamp-2">
            <%= sequence.description %>
          </p>
        <% end %>
      </div>

      <!-- Acciones de la secuencia -->
      <!-- Mobile: Compact menu -->
      <div class="flex space-x-1 shrink-0 md:hidden">
        <!-- Add Scene Button (always visible) -->
        <button type="button"
                data-action="click->structure#openNewSceneModal"
                data-sequence-id="<%= sequence.id %>"
                class="text-gray-400 hover:text-green-600 p-1"
                title="Agregar escena">
          <%= heroicon "plus", size: "4" %>
        </button>

        <!-- More actions menu -->
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  data-action="click->dropdown#toggle"
                  class="text-gray-400 hover:text-primary p-1"
                  title="Más acciones">
            <%= heroicon "ellipsis-vertical", size: "4" %>
          </button>

          <!-- Dropdown Menu -->
          <div data-dropdown-target="menu"
               class="hidden absolute right-0 mt-1 w-56 bg-white rounded-md shadow-lg z-50 border border-gray-200">
            <div class="py-1">
              <!-- Move Up/Down -->
              <% unless sequence.position == 1 %>
                <%= button_to move_left_project_sequence_path(project, sequence),
                              method: :patch,
                              class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary flex items-center gap-2",
                              data: { turbo: true } do %>
                  <%= heroicon "chevron-up", size: "4" %>
                  Mover arriba
                <% end %>
              <% end %>

              <% unless sequence.position == sequence.act.sequences.count %>
                <%= button_to move_right_project_sequence_path(project, sequence),
                              method: :patch,
                              class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary flex items-center gap-2",
                              data: { turbo: true } do %>
                  <%= heroicon "chevron-down", size: "4" %>
                  Mover abajo
                <% end %>
              <% end %>

              <!-- Move to Act submenu -->
              <% if project.acts.where.not(id: sequence.act_id).any? %>
                <div class="border-t border-gray-200 my-1"></div>
                <div class="px-4 py-2 text-xs font-semibold text-gray-500">
                  Mover a Acto
                </div>
                <% project.acts.where.not(id: sequence.act_id).each do |act| %>
                  <%= button_to move_to_act_project_sequence_path(project, sequence),
                                method: :patch,
                                params: { target_act_id: act.id, target_position: 1 },
                                class: "w-full text-left px-6 py-2 text-sm text-gray-600 hover:bg-primary-50 hover:text-primary",
                                data: { turbo: true } do %>
                    <%= act.title.truncate(30) %>
                  <% end %>
                <% end %>
              <% end %>

              <!-- Edit and Delete -->
              <div class="border-t border-gray-200 my-1"></div>
              <button type="button"
                      data-action="click->structure#openEditSequenceModal"
                      data-sequence-id="<%= sequence.id %>"
                      class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary flex items-center gap-2">
                <%= heroicon "pencil", size: "4" %>
                Editar secuencia
              </button>

              <%= button_to project_sequence_path(project, sequence),
                            method: :delete,
                            data: { turbo_confirm: "¿Eliminar esta secuencia y sus escenas?" },
                            class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center gap-2" do %>
                <%= heroicon "trash", size: "4" %>
                Eliminar secuencia
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Tablet/Desktop: Full button bar -->
      <div class="hidden md:flex space-x-1 shrink-0">
        <!-- Botones de navegación (mover arriba/izquierda) -->
        <% unless sequence.position == 1 %>
          <%= button_to move_left_project_sequence_path(project, sequence),
                        method: :patch,
                        class: "text-gray-400 hover:text-primary p-1",
                        title: "Mover",
                        form: { class: "inline-block" } do %>
            <span class="xl:hidden"><%= heroicon "chevron-up", size: "4" %></span>
            <span class="hidden xl:inline"><%= heroicon "chevron-left", size: "4" %></span>
          <% end %>
        <% end %>

        <% unless sequence.position == sequence.act.sequences.count %>
          <%= button_to move_right_project_sequence_path(project, sequence),
                        method: :patch,
                        class: "text-gray-400 hover:text-primary p-1",
                        title: "Mover",
                        form: { class: "inline-block" } do %>
            <span class="xl:hidden"><%= heroicon "chevron-down", size: "4" %></span>
            <span class="hidden xl:inline"><%= heroicon "chevron-right", size: "4" %></span>
          <% end %>
        <% end %>

        <!-- Add Scene Button -->
        <button type="button"
                data-action="click->structure#openNewSceneModal"
                data-sequence-id="<%= sequence.id %>"
                class="text-gray-400 hover:text-green-600 p-1"
                title="Agregar escena">
          <%= heroicon "plus", size: "4" %>
        </button>

        <!-- Move to Act Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  data-action="click->dropdown#toggle"
                  class="text-gray-400 hover:text-primary p-1"
                  title="Mover a otro acto">
            <%= heroicon "arrows-right-left", size: "4" %>
          </button>

          <!-- Dropdown Menu -->
          <div data-dropdown-target="menu"
               class="hidden absolute right-0 mt-1 w-48 bg-white rounded-md shadow-lg z-50 border border-gray-200">
            <div class="py-1">
              <div class="px-3 py-2 text-xs font-semibold text-gray-500 border-b">
                Mover a Acto
              </div>
              <% project.acts.where.not(id: sequence.act_id).each do |act| %>
                <%= button_to move_to_act_project_sequence_path(project, sequence),
                              method: :patch,
                              params: { target_act_id: act.id, target_position: 1 },
                              class: "w-full text-left px-3 py-2 text-xs text-gray-700 hover:bg-primary-50 hover:text-primary",
                              data: { turbo: true } do %>
                  <%= act.title %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <button type="button"
                data-action="click->structure#openEditSequenceModal"
                data-sequence-id="<%= sequence.id %>"
                class="text-gray-400 hover:text-primary p-1"
                title="Editar secuencia">
          <%= heroicon "pencil", size: "4" %>
        </button>

        <%= button_to project_sequence_path(project, sequence),
                      method: :delete,
                      data: { turbo_confirm: "¿Eliminar esta secuencia y sus escenas?" },
                      class: "text-gray-400 hover:text-red-600 p-1",
                      title: "Eliminar secuencia" do %>
          <%= heroicon "trash", size: "4" %>
        <% end %>
      </div>
    </div>

    <!-- Toggle para mostrar/ocultar escenas -->
    <div id="sequence_<%= sequence.id %>_stats">
      <%= render "structures/sequence_stats", sequence: sequence %>
    </div>
  </div>

  <!-- Lista de Escenas (colapsable en móvil, siempre visible en tablet+) -->
  <div id="scenes-<%= sequence.id %>" class="hidden md:flex md:flex-1 md:flex-col md:overflow-hidden">
    <!-- Header de Escenas -->
    <div class="px-3 py-2 bg-gray-100 border-t border-gray-200">
      <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wide">
        Escenas
      </h5>
    </div>

    <div id="sequence_<%= sequence.id %>_scenes"
         class="p-2 space-y-2 min-h-[100px] lg:flex-1 lg:overflow-y-auto"
         data-controller="sortable"
         data-sortable-url-value="<%= project_reorder_structure_path(@project) %>"
         data-sortable-type-value="scene"
         data-sortable-group-value="scenes"
         data-sortable-parent-id-value="<%= sequence.id %>"
         data-sortable-parent-id="<%= sequence.id %>">

      <% sequence.scenes.each do |scene| %>
        <%= render "structures/scene_item", scene: scene, project: project %>
      <% end %>

      <% if sequence.scenes.empty? %>
        <div id="sequence_<%= sequence.id %>_empty_state" class="text-center py-4 text-gray-400 text-xs pointer-events-none">
          <p>Sin escenas</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
