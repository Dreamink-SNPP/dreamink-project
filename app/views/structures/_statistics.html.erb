<!-- Estadísticas rápidas -->
<div class="mt-4 flex space-x-6 text-sm text-gray-600">
  <div class="flex items-center">
    <span class="font-semibold mr-1"><%= acts_count %></span>
    <%= acts_count == 1 ? "Acto" : "Actos" %>
  </div>
  <div class="flex items-center">
    <span class="font-semibold mr-1"><%= sequences_count %></span>
    <%= sequences_count == 1 ? "Secuencia" : "Secuencias" %>
  </div>
  <div class="flex items-center">
    <span class="font-semibold mr-1"><%= scenes_count %></span>
    <%= scenes_count == 1 ? "Escena" : "Escenas" %>
  </div>
</div>
