<!-- Item de Escena -->
<div id="scene_<%= scene.id %>"
     class="scene-item bg-white rounded-md border border-gray-200 p-2.5 shadow-sm hover:shadow-md hover:border-gray-300 transition-all"
     <% if scene.color.present? %>style="--scene-color: <%= scene.color %>; border-left: 3px solid var(--scene-color);"<% end %>
     data-sortable-id="<%= scene.id %>">
  <div class="flex items-start justify-between">
    <!-- Drag Handle -->
    <div class="drag-handle mr-1.5 pt-0.5 text-gray-300 hover:text-gray-500 transition cursor-grab">
      <%= heroicon "bars-3", size: "3.5", class: "rotate-90" %>
    </div>

    <div class="flex-1 min-w-0">
      <p class="text-xs font-medium text-gray-900 truncate">
        <%= scene.title %>
      </p>
      <% if scene.description.present? %>
        <p class="mt-0.5 text-xs text-gray-500 line-clamp-1">
          <%= scene.description %>
        </p>
      <% end %>

      <!-- Locaciones -->
      <% if scene.locations.any? %>
        <div class="mt-1 flex flex-wrap gap-1">
          <% scene.locations.first(2).each do |location| %>
            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs bg-gray-100 text-gray-600">
              <%= location.interior? ? "ðŸ " : "ðŸŒ³" %>
              <%= location.name.truncate(15) %>
            </span>
          <% end %>
          <% if scene.locations.count > 2 %>
            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs bg-gray-100 text-gray-600">
              +<%= scene.locations.count - 2 %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Acciones -->
    <div class="ml-2 flex space-x-1">
      <!-- Move to Sequence Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button type="button"
                data-action="click->dropdown#toggle"
                class="text-gray-400 hover:text-primary"
                title="Mover a otra secuencia">
          <%= heroicon "arrows-right-left", size: "3.5" %>
        </button>

        <!-- Dropdown Menu -->
        <div data-dropdown-target="menu"
             class="hidden absolute right-0 mt-1 w-56 bg-white rounded-md shadow-lg z-50 border border-gray-200 max-h-60 overflow-y-auto">
          <div class="py-1">
            <div class="px-3 py-2 text-xs font-semibold text-gray-500 border-b sticky top-0 bg-white">
              Mover a Secuencia
            </div>
            <% project.acts.order(:position).each do |act| %>
              <% act_sequences = act.sequences.where.not(id: scene.sequence_id).order(:position) %>
              <% if act_sequences.any? %>
                <div class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-50">
                  <%= act.title %>
                </div>
                <% act_sequences.each do |sequence| %>
                  <%= button_to move_to_sequence_project_scene_path(project, scene),
                                method: :patch,
                                params: { target_sequence_id: sequence.id, target_position: 1 },
                                class: "w-full text-left px-5 py-1.5 text-xs text-gray-600 hover:bg-primary-50 hover:text-primary",
                                data: { turbo: true } do %>
                    <%= sequence.title.truncate(35) %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <button type="button"
              data-action="click->structure#openEditSceneModal"
              data-scene-id="<%= scene.id %>"
              class="text-gray-400 hover:text-primary"
              title="Editar escena">
        <%= heroicon "pencil", size: "3.5" %>
      </button>

      <%= button_to project_scene_path(project, scene),
                    method: :delete,
                    data: { turbo_confirm: "Â¿Eliminar esta escena?" },
                    class: "text-gray-400 hover:text-red-600",
                    title: "Eliminar escena" do %>
        <%= heroicon "x-mark", size: "3.5" %>
      <% end %>
    </div>
  </div>
</div>
