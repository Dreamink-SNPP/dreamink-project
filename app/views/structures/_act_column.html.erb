<!-- Columna del Acto -->
<div id="act_<%= act.id %>"
     class="act-column shrink-0 w-80 lg:w-auto lg:min-w-[600px] bg-white rounded-lg shadow-sm"
     data-sortable-id="<%= act.id %>">

  <!-- Header del Acto -->
  <div class="bg-gradient-primary rounded-t-lg p-4">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-white">
          <%= act.title %>
        </h3>
        <% if act.description.present? %>
          <p class="mt-1 text-sm text-primary-100 line-clamp-2">
            <%= act.description %>
          </p>
        <% end %>
      </div>

      <!-- Menú de acciones del acto -->
      <div class="ml-2 flex space-x-1">
        <!-- Botones de navegación -->
        <% unless act.position == 1 %>
          <%= button_to move_left_project_act_path(project, act),
                        method: :patch,
                        class: "text-white hover:text-primary-100 p-1 transition",
                        title: "Mover a la izquierda",
                        form: { class: "inline-block" } do %>
            <%= heroicon "chevron-left", size: "5" %>
          <% end %>
        <% end %>

        <% unless act.position == project.acts.count %>
          <%= button_to move_right_project_act_path(project, act),
                        method: :patch,
                        class: "text-white hover:text-primary-100 p-1 transition",
                        title: "Mover a la derecha",
                        form: { class: "inline-block" } do %>
            <%= heroicon "chevron-right", size: "5" %>
          <% end %>
        <% end %>

        <button type="button"
                data-action="click->structure#openEditActModal"
                data-act-id="<%= act.id %>"
                class="text-white hover:text-primary-100 p-1 transition"
                title="Editar acto">
          <%= heroicon "pencil", size: "5" %>
        </button>

        <%= button_to project_act_path(project, act),
                      method: :delete,
                      data: { turbo_confirm: "¿Eliminar este acto y todo su contenido?" },
                      class: "text-white hover:text-red-200 p-1 transition",
                      title: "Eliminar acto",
                      form: { class: "inline-block" } do %>
          <%= heroicon "trash", size: "5" %>
        <% end %>
      </div>
    </div>

    <!-- Contador de secuencias -->
    <div id="act_<%= act.id %>_stats">
      <%= render "structures/act_stats", act: act %>
    </div>
  </div>

  <!-- Sección de Secuencias -->
  <div class="px-4 pt-3 pb-2 border-b border-gray-100">
    <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide">
      Secuencias
    </h4>
  </div>

  <!-- Lista de Secuencias -->
  <div id="act_<%= act.id %>_sequences"
       class="p-4 space-y-3 lg:space-y-0 lg:space-x-3 lg:flex justify-center lg:items-start min-h-[150px] max-h-[calc(100vh-350px)] overflow-y-auto lg:overflow-y-hidden lg:overflow-x-auto"
       data-controller="sortable"
       data-sortable-url-value="<%= project_reorder_structure_path(project) %>"
       data-sortable-type-value="sequence"
       data-sortable-group-value="sequences"
       data-sortable-parent-id-value="<%= act.id %>"
       data-sortable-parent-id="<%= act.id %>">

      <% act.sequences.each do |sequence| %>
        <%= render "structures/sequence_card", sequence: sequence, project: project %>
      <% end %>

      <% if act.sequences.empty? %>
        <div id="act_<%= act.id %>_empty_state" class="text-center py-8 text-gray-400 text-sm pointer-events-none">
          <%= heroicon "document-text", size: "8", class: "mx-auto mb-2 text-gray-300" %>
          <p>Sin secuencias</p>
        </div>
      <% end %>
    </div>

  <!-- Botón para agregar secuencia -->
  <div class="p-4 border-t border-gray-100">
    <button type="button"
            data-action="click->structure#openNewSequenceModal"
            data-act-id="<%= act.id %>"
            class="w-full py-2 px-4 border-2 border-dashed border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:border-primary hover:text-primary transition">
      <%= heroicon "plus", class: "inline-block -ml-1 mr-2 h-5 w-5" %>
      Agregar Secuencia
    </button>
  </div>
</div>
