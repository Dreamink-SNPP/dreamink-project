<!-- Columna del Acto -->
<div id="act_<%= act.id %>"
     class="act-column flex-shrink-0 w-80 bg-white rounded-lg shadow-sm"
     data-sortable-id="<%= act.id %>">

  <!-- Header del Acto -->
  <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-t-lg p-4">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-white">
          <%= act.title %>
        </h3>
        <% if act.description.present? %>
          <p class="mt-1 text-sm text-indigo-100 line-clamp-2">
            <%= act.description %>
          </p>
        <% end %>
      </div>

      <!-- Menú de acciones del acto -->
      <div class="ml-2 flex space-x-1">
        <!-- Botones de navegación -->
        <% unless act.position == 1 %>
          <%= button_to move_left_project_act_path(project, act),
                        method: :patch,
                        class: "text-white hover:text-indigo-100 p-1 transition",
                        title: "Mover a la izquierda",
                        form: { class: "inline-block", data: { turbo: false } } do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
        <% end %>

        <% unless act.position == project.acts.count %>
          <%= button_to move_right_project_act_path(project, act),
                        method: :patch,
                        class: "text-white hover:text-indigo-100 p-1 transition",
                        title: "Mover a la derecha",
                        form: { class: "inline-block", data: { turbo: false } } do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        <% end %>

        <button type="button"
                data-action="click->structure#openEditActModal"
                data-act-id="<%= act.id %>"
                class="text-white hover:text-indigo-100 p-1 transition"
                title="Editar acto">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </button>

        <%= button_to project_act_path(project, act),
                      method: :delete,
                      data: { turbo_confirm: "¿Eliminar este acto y todo su contenido?" },
                      class: "text-white hover:text-red-200 p-1 transition",
                      title: "Eliminar acto",
                      form: { class: "inline-block" } do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Contador de secuencias -->
    <div class="mt-3 text-xs text-indigo-100">
      <%= pluralize(act.sequences.count, "secuencia") %> • <%= pluralize(act.scenes.count, "escena") %>
    </div>
  </div>

  <!-- Lista de Secuencias -->
  <div id="act_<%= act.id %>_sequences"
       class="p-4 space-y-3 min-h-[200px] max-h-[calc(100vh-300px)] overflow-y-auto"
       data-controller="sortable"
       data-sortable-url-value="<%= project_reorder_structure_path(@project) %>"
       data-sortable-type-value="sequence">

    <% if act.sequences.any? %>
      <% act.sequences.each do |sequence| %>
        <%= render "structures/sequence_card", sequence: sequence, project: project %>
      <% end %>
    <% else %>
      <!-- Placeholder cuando no hay secuencias -->
      <div class="text-center py-8 text-gray-400 text-sm pointer-events-none">
        <svg class="mx-auto h-8 w-8 mb-2 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <p>Sin secuencias</p>
      </div>
    <% end %>
  </div>

  <!-- Botón para agregar secuencia -->
  <div class="p-4 border-t border-gray-100">
    <button type="button"
            data-action="click->structure#openNewSequenceModal"
            data-act-id="<%= act.id %>"
            class="w-full py-2 px-4 border-2 border-dashed border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:border-indigo-400 hover:text-indigo-600 transition">
      <svg class="inline-block -ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Agregar Secuencia
    </button>
  </div>
</div>
