<%= render "shared/project_navigation", project: @project %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <!-- Título y navegación -->
      <div class="flex items-center space-x-3 mb-4 sm:mb-0">
        <%= link_to project_path(@project), class: "text-gray-400 hover:text-gray-500 transition" do %>
          <%= heroicon "chevron-left", size: "5" %>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Locaciones
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= @project.title %>
          </p>
        </div>
      </div>

      <!-- Acciones -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to collection_report_project_locations_path(@project, format: :pdf),
                    target: "_blank",
                    class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
          <%= heroicon "document-text", class: "-ml-1 mr-2 h-5 w-5 text-red-600" %>
          Reporte PDF Completo
        <% end %>

        <%= link_to new_project_location_path(@project),
                    class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
          <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
          Nueva Locación
        <% end %>
      </div>
    </div>

    <!-- Filtros -->
    <div class="mt-6 flex flex-wrap gap-3">
      <%= link_to project_locations_path(@project),
                  class: "inline-flex items-center gap-1 px-3 py-2 border rounded-md text-sm font-medium transition #{params[:type].blank? ? 'border-primary text-secondary-dark bg-primary-50' : 'border-gray-300 text-gray-700 bg-white hover:bg-gray-50'}" do %>
        <%= heroicon "clipboard", size: "5", class: "inline" %> Todas (<%= @project.locations.count %>)
      <% end %>

      <%= link_to project_locations_path(@project, type: 'interior'),
                  class: "inline-flex items-center gap-1 px-3 py-2 border rounded-md text-sm font-medium transition #{params[:type] == 'interior' ? 'border-green-500 text-green-700 bg-green-50' : 'border-gray-300 text-gray-700 bg-white hover:bg-gray-50'}" do %>
        <%= heroicon "home", size: "5", class: "inline" %> Interiores (<%= @project.locations.interiors.count %>)
      <% end %>

      <%= link_to project_locations_path(@project, type: 'exterior'),
                  class: "inline-flex items-center gap-1 px-3 py-2 border rounded-md text-sm font-medium transition #{params[:type] == 'exterior' ? 'border-blue-500 text-blue-700 bg-blue-50' : 'border-gray-300 text-gray-700 bg-white hover:bg-gray-50'}" do %>
        <%= heroicon "globe-americas", size: "5", class: "inline" %> Exteriores (<%= @project.locations.exteriors.count %>)
      <% end %>
    </div>
  </div>

  <!-- Lista de locaciones -->
  <% if @locations.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @locations.each do |location| %>
          <li>
            <%= link_to project_location_path(@project, location), class: "block hover:bg-gray-50 transition duration-150 ease-in-out" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center flex-1 min-w-0">
                    <!-- Icono según tipo -->
                    <div class="shrink-0 h-12 w-12 flex items-center justify-center">
                      <% if location.interior? %>
                        <%= heroicon "home", size: "8", class: "text-green-600" %>
                      <% elsif location.exterior? %>
                        <%= heroicon "globe-americas", size: "8", class: "text-blue-600" %>
                      <% else %>
                        <%= heroicon "map-pin", size: "8", class: "text-primary-600" %>
                      <% end %>
                    </div>

                    <div class="ml-4 flex-1 min-w-0">
                      <div class="flex items-center space-x-3">
                        <p class="text-lg font-semibold text-gray-900 truncate">
                          <%= location.name %>
                        </p>
                        <% if location.location_type.present? %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= location.interior? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                            <%= location.location_type.capitalize %>
                          </span>
                        <% end %>
                      </div>

                      <% if location.description.present? %>
                        <p class="mt-2 text-sm text-gray-600 line-clamp-2">
                          <%= location.description %>
                        </p>
                      <% end %>

                      <!-- Cantidad de escenas -->
                      <div class="mt-2 flex items-center text-xs text-gray-500">
                        <%= heroicon "film", size: "4", class: "shrink-0 mr-1.5 text-gray-400" %>
                        Usada
                        en <%= pluralize(location.scenes.count, "escena") %>
                      </div>
                    </div>
                  </div>

                  <div class="ml-5 shrink-0">
                    <%= heroicon "chevron-right", size: "5", class: "text-gray-400" %>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <!-- Estado vacío -->
    <div class="text-center py-12 bg-white shadow rounded-lg">
      <%= heroicon "map-pin", size: "12", class: "mx-auto text-gray-400" %>
      <h3 class="mt-2 text-sm font-medium text-gray-900">
        <%= params[:type].present? ? "No hay locaciones #{params[:type] == 'interior' ? 'interiores' : 'exteriores'}" : "No hay locaciones" %>
      </h3>
      <p class="mt-1 text-sm text-gray-500">Comienza agregando las locaciones
        donde se desarrolla tu historia.</p>
      <div class="mt-6">
        <%= link_to new_project_location_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
          Crear Locación
        <% end %>
      </div>
    </div>
  <% end %>
</div>
