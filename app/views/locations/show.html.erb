<%= render "shared/project_navigation", project: @project %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="scroll-to-top">
  <!-- Header -->
  <div class="mb-8">
    <!-- Título y navegación -->
    <div class="flex items-center space-x-3 mb-6">
      <%= link_to project_locations_path(@project), class: "text-gray-400 hover:text-gray-500 transition" do %>
        <%= heroicon "chevron-left", size: "5" %>
      <% end %>
      <div class="shrink-0 h-12 w-12 flex items-center justify-center">
        <% if @location.interior? %>
          <%= heroicon "home", size: "8", class: "text-green-600" %>
        <% elsif @location.exterior? %>
          <%= heroicon "globe-americas", size: "8", class: "text-blue-600" %>
        <% else %>
          <%= heroicon "map-pin", size: "8", class: "text-primary-600" %>
        <% end %>
      </div>
      <div>
        <div class="flex items-center gap-2 flex-wrap">
          <h1 class="text-3xl font-bold text-gray-900">
            <%= @location.name %>
          </h1>
          <% if @location.location_type.present? %>
            <span class="shrink-0 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @location.interior? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @location.location_type.capitalize %>
            </span>
          <% end %>
        </div>
        <p class="mt-1 text-sm text-gray-500">
          <%= @project.title %>
        </p>
      </div>
    </div>

    <!-- Acciones -->
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
      <%= link_to report_project_location_path(@project, @location, format: :pdf),
                  target: "_blank",
                  class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
        <%= heroicon "document-text", class: "-ml-1 mr-2 h-5 w-5 text-red-600" %>
        Generar Reporte
      <% end %>

      <%= link_to edit_project_location_path(@project, @location),
                  class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
        <%= heroicon "pencil", class: "-ml-1 mr-2 h-5 w-5 text-gray-500" %>
        Editar
      <% end %>

      <%= button_to project_location_path(@project, @location),
                    method: :delete,
                    data: { turbo_confirm: "¿Estás seguro de eliminar esta locación?" },
                    class: "inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition" do %>
        <%= heroicon "trash", class: "-ml-1 mr-2 h-5 w-5" %>
        Eliminar
      <% end %>
    </div>
  </div>

  <!-- Descripción -->
  <% if @location.description.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Descripción</h2>
      <p class="text-gray-700 whitespace-pre-wrap"><%= @location.description %></p>
    </div>
  <% end %>

  <!-- Escenas donde aparece -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">
        Aparece en <%= pluralize(@scenes.count, "escena") %>
      </h2>
      <% if @scenes.any? %>
        <%= link_to project_structure_path(@project), class: "text-primary hover:text-primary-900 text-sm font-medium" do %>
          Ver en estructura →
        <% end %>
      <% end %>
    </div>

    <% if @scenes.any? %>
      <div class="space-y-3">
        <% @scenes.each do |scene| %>
          <div class="border-l-4 border-primary pl-4 py-2 hover:bg-gray-50 transition">
            <%= link_to project_scene_path(@project, scene), class: "block" do %>
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-semibold text-gray-900">
                    <%= scene.title %>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= scene.sequence.act.title %>
                    › <%= scene.sequence.title %>
                  </p>
                </div>
                <%= heroicon "chevron-right", size: "5", class: "text-gray-400" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <%= heroicon "film", size: "10", class: "mx-auto text-gray-400" %>
        <p class="mt-2 text-sm text-gray-500">
          Esta locación aún no se usa en ninguna escena
        </p>
        <div class="mt-4">
          <%= link_to project_structure_path(@project), class: "text-primary hover:text-primary-900 text-sm font-medium" do %>
            Ir a la estructura para agregar escenas →
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Scroll to Top Button -->
  <button type="button"
          data-scroll-to-top-target="button"
          data-action="click->scroll-to-top#scrollToTop"
          class="hidden fixed bottom-6 right-6 z-40 p-3 sm:p-4 bg-primary text-white rounded-full shadow-lg hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-300 opacity-0"
          aria-label="Scroll to top">
    <%= heroicon "arrow-up", size: "6", class: "sm:h-6 sm:w-6" %>
  </button>
</div>
