<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <!-- Título y navegación -->
    <div class="flex items-center space-x-3 mb-6">
      <%= link_to project_locations_path(@project), class: "text-gray-400 hover:text-gray-500 transition" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div class="shrink-0 h-12 w-12 flex items-center justify-center">
        <% if @location.interior? %>
          <span class="text-2xl">🏠</span>
        <% elsif @location.exterior? %>
          <span class="text-2xl">🌳</span>
        <% else %>
          <span class="text-2xl">📍</span>
        <% end %>
      </div>
      <div>
        <div class="flex items-center gap-2 flex-wrap">
          <h1 class="text-3xl font-bold text-gray-900">
            <%= @location.name %>
          </h1>
          <% if @location.location_type.present? %>
            <span class="shrink-0 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @location.interior? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @location.location_type.capitalize %>
            </span>
          <% end %>
        </div>
        <p class="mt-1 text-sm text-gray-500">
          <%= @project.title %>
        </p>
      </div>
    </div>

    <!-- Acciones -->
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
      <%= link_to report_project_location_path(@project, @location, format: :pdf),
                  target: "_blank",
                  class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        Generar Reporte
      <% end %>

      <%= link_to edit_project_location_path(@project, @location),
                  class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>

      <%= button_to project_location_path(@project, @location),
                    method: :delete,
                    data: { turbo_confirm: "¿Estás seguro de eliminar esta locación?" },
                    class: "inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Eliminar
      <% end %>
    </div>
  </div>

  <!-- Descripción -->
  <% if @location.description.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Descripción</h2>
      <p class="text-gray-700 whitespace-pre-wrap"><%= @location.description %></p>
    </div>
  <% end %>

  <!-- Escenas donde aparece -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">
        Aparece en <%= pluralize(@scenes.count, "escena") %>
      </h2>
      <% if @scenes.any? %>
        <%= link_to project_structure_path(@project), class: "text-primary hover:text-primary-900 text-sm font-medium" do %>
          Ver en estructura →
        <% end %>
      <% end %>
    </div>

    <% if @scenes.any? %>
      <div class="space-y-3">
        <% @scenes.each do |scene| %>
          <div class="border-l-4 border-primary pl-4 py-2 hover:bg-gray-50 transition">
            <%= link_to project_scene_path(@project, scene), class: "block" do %>
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-semibold text-gray-900">
                    <%= scene.title %>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= scene.sequence.act.title %>
                    › <%= scene.sequence.title %>
                  </p>
                </div>
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500">
          Esta locación aún no se usa en ninguna escena
        </p>
        <div class="mt-4">
          <%= link_to project_structure_path(@project), class: "text-primary hover:text-primary-900 text-sm font-medium" do %>
            Ir a la estructura para agregar escenas →
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
