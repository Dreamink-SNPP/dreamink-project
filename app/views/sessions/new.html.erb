<div class="min-h-screen flex items-center justify-center bg-gradient-auth py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo y título -->
    <div>
      <div class="flex justify-center text-primary">
        <%= heroicon "film", size: "16", class: "text-primary" %>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Dreamink
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Gestión de estructura dramática para obras audiovisuales
      </p>
    </div>

    <!-- Formulario de login -->
    <div class="mt-8 bg-white py-8 px-4 shadow-xl rounded-lg sm:px-10">
      <%= form_with url: login_path, method: :post, class: "space-y-6" do |form| %>
        <!-- Email -->
        <div>
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email_address,
                                 required: true,
                                 autofocus: true,
                                 autocomplete: "username",
                                 class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary focus:border-primary sm:text-sm",
                                 placeholder: "tu@email.com" %>
          </div>
        </div>

        <!-- Password -->
        <div>
          <div class="flex items-center justify-between">
            <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700" %>
            <%= link_to "¿Olvidaste tu contraseña?", forgot_password_path, class: "text-sm font-medium text-primary hover:text-primary" %>
          </div>
          <div class="mt-1">
            <%= form.password_field :password,
                                    required: true,
                                    autocomplete: "current-password",
                                    maxlength: 72,
                                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary focus:border-primary sm:text-sm",
                                    placeholder: "Tu contraseña" %>
          </div>
        </div>

        <!-- Submit -->
        <div>
          <%= form.submit "Iniciar Sesión",
                          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-150 ease-in-out cursor-pointer" %>
        </div>

        <!-- Link a Registro -->
        <div class="text-center">
          <p class="text-sm text-gray-600">
            ¿No tenés una cuenta?
            <%= link_to "Crear cuenta", register_path, class: "font-medium text-primary hover:text-primary" %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- Footer -->
    <p class="mt-2 text-center text-sm text-gray-600">
      Proyecto de código abierto con fines educativos
    </p>
  </div>
</div>
