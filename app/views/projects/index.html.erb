<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">
        Mis Proyectos
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Gestiona tus guiones y obras audiovisuales
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
        <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
        Nuevo Proyecto
      <% end %>
    </div>
  </div>

  <!-- Lista de proyectos -->
  <% if @projects.any? %>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @projects.each do |project| %>
        <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
          <%= link_to project_path(project), class: "block p-6" do %>
            <div class="flex items-start justify-between gap-3 mb-4">
              <h3 class="text-lg font-semibold text-gray-900 line-clamp-2 flex-1">
                <%= project.title %>
              </h3>
              <span class="shrink-0 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                <%= project.genre || "Sin género" %>
              </span>
            </div>

            <% if project.logline.present? %>
              <p class="text-sm text-gray-600 line-clamp-3 mb-4">
                <%= project.logline %>
              </p>
            <% else %>
              <p class="text-sm text-gray-400 italic mb-4">
                Sin logline
              </p>
            <% end %>

            <div class="flex items-center justify-between text-xs text-gray-500">
              <div class="flex gap-4">
                <span title="Actos" class="flex items-center gap-1"><%= heroicon "document", size: "4", class: "inline" %> <%= project.acts.count %></span>
                <span title="Personajes" class="flex items-center gap-1"><%= heroicon "user-group", size: "4", class: "inline" %> <%= project.characters.count %></span>
                <span title="Locaciones" class="flex items-center gap-1"><%= heroicon "map-pin", size: "4", class: "inline" %> <%= project.locations.count %></span>
              </div>
              <span class="text-right">
                <%= time_ago_in_words(project.updated_at) %>
              </span>
            </div>
          <% end %>

          <!-- Acciones -->
          <div class="border-t border-gray-100 px-6 py-3 mt-4 flex items-center justify-between gap-3">
            <div class="flex items-center gap-4">
              <%= link_to edit_project_path(project),
                          class: "text-primary hover:text-secondary-dark text-sm font-medium transition" do %>
                Editar
              <% end %>
              <%= link_to project_structure_path(project),
                          class: "text-green-600 hover:text-green-700 text-sm font-medium transition" do %>
                Estructura
              <% end %>
            </div>
            <%= button_to project_path(project),
                          method: :delete,
                          data: { turbo_confirm: "¿Estás seguro de eliminar este proyecto?" },
                          class: "text-red-600 hover:text-red-700 text-sm font-medium transition" do %>
              Eliminar
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Estado vacío -->
    <div class="text-center py-12">
      <%= heroicon "document-text", size: "12", class: "mx-auto text-gray-400" %>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No hay proyectos</h3>
      <p class="mt-1 text-sm text-gray-500">Comienza creando tu primer
        proyecto.</p>
      <div class="mt-6">
        <%= link_to new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
          Crear Proyecto
        <% end %>
      </div>
    </div>
  <% end %>
</div>
