<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="scroll-to-top">
  <!-- Header con acciones -->
  <div class="mb-8">
    <!-- Título y acciones -->
    <div class="mb-6">
      <div class="flex items-center gap-2 sm:gap-3 mb-3 flex-wrap">
        <%= link_to projects_path, class: "text-gray-400 hover:text-gray-500 transition shrink-0" do %>
          <%= heroicon "chevron-left", size: "5" %>
        <% end %>
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 break-word min-w-0">
          <%= @project.title %>
        </h1>
        <% if @project.genre.present? %>
          <span class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium bg-primary-100 text-primary-800 shrink-0">
            <%= @project.genre %>
          </span>
        <% end %>
      </div>
      <p class="ml-0 sm:ml-8 text-sm text-gray-500">
        Última actualización: <%= time_ago_in_words(@project.updated_at) %>
      </p>
    </div>

    <!-- Menú de acciones -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 sm:gap-3 mb-6">
      <!-- Primary action: Edit -->
      <%= link_to edit_project_path(@project), class: "inline-flex items-center justify-center px-3 sm:px-4 py-2 border border-transparent rounded-md shadow-sm text-xs sm:text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition whitespace-nowrap" do %>
        <%= heroicon "pencil", class: "-ml-0.5 sm:-ml-1 mr-1.5 sm:mr-2 h-4 w-4 sm:h-5 sm:w-5" %>
        Editar
      <% end %>

      <!-- Secondary action: Structure -->
      <%= link_to project_structure_path(@project), class: "inline-flex items-center justify-center px-3 sm:px-4 py-2 border border-transparent rounded-md shadow-sm text-xs sm:text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition whitespace-nowrap" do %>
        <%= heroicon "queue-list", class: "-ml-0.5 sm:-ml-1 mr-1.5 sm:mr-2 h-4 w-4 sm:h-5 sm:w-5" %>
        Estructura
      <% end %>

      <!-- Utility actions: Export group -->
      <%= link_to report_project_path(@project, format: :pdf),
                  target: "_blank",
                  class: "inline-flex items-center justify-center px-3 sm:px-4 py-2 border border-gray-300 rounded-md shadow-sm text-xs sm:text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition whitespace-nowrap" do %>
        <%= heroicon "document-text", class: "-ml-0.5 sm:-ml-1 mr-1.5 sm:mr-2 h-4 w-4 sm:h-5 sm:w-5 text-red-600" %>
        <span class="hidden sm:inline">Generar&nbsp;</span>PDF
      <% end %>

      <%= link_to fountain_export_project_path(@project),
                  data: { turbo: false },
                  class: "inline-flex items-center justify-center px-3 sm:px-4 py-2 border border-gray-300 rounded-md shadow-sm text-xs sm:text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition whitespace-nowrap" do %>
        <%= heroicon "arrow-down-tray", class: "-ml-0.5 sm:-ml-1 mr-1.5 sm:mr-2 h-4 w-4 sm:h-5 sm:w-5 text-blue-600" %>
        <span class="hidden sm:inline">Exportar&nbsp;</span>Fountain
      <% end %>
    </div>

    <!-- Navegación de tabs -->
    <div class="border-b border-gray-200 overflow-x-auto -mx-4 px-4 sm:mx-0 sm:px-0 sm:overflow-x-visible">
      <nav class="-mb-px flex space-x-3 sm:space-x-6 md:space-x-8 min-w-max sm:min-w-0">
        <a href="#tratamiento" class="border-primary text-primary whitespace-nowrap py-3 sm:py-4 px-0.5 sm:px-1 border-b-2 font-medium text-xs sm:text-sm">
          Tratamiento
        </a>
        <%= link_to project_characters_path(@project), class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-3 sm:py-4 px-0.5 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition" do %>
          Personajes
          <span class="ml-1 sm:ml-2 bg-gray-100 text-gray-900 py-0.5 px-1 sm:px-2.5 rounded-full text-xs"><%= @project.characters.count %></span>
        <% end %>
        <%= link_to project_locations_path(@project), class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-3 sm:py-4 px-0.5 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition" do %>
          Locaciones
          <span class="ml-1 sm:ml-2 bg-gray-100 text-gray-900 py-0.5 px-1 sm:px-2.5 rounded-full text-xs"><%= @project.locations.count %></span>
        <% end %>
        <%= link_to project_ideas_path(@project), class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-3 sm:py-4 px-0.5 sm:px-1 border-b-2 font-medium text-xs sm:text-sm transition" do %>
          Ideas
          <span class="ml-1 sm:ml-2 bg-gray-100 text-gray-900 py-0.5 px-1 sm:px-2.5 rounded-full text-xs"><%= @project.ideas.count %></span>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Contenido del Tratamiento -->
  <div class="space-y-8">
    <!-- Información Básica -->
    <% if @project.tone.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Tono</h2>
        <p class="text-gray-700"><%= @project.tone %></p>
      </div>
    <% end %>

    <!-- Logline -->
    <% if @project.logline.present? %>
      <div class="bg-gradient-primary-light border-l-4 border-primary p-6 rounded-r-lg">
        <h2 class="text-xl font-semibold text-gray-900 mb-3">Logline</h2>
        <p class="text-lg text-gray-800 italic"><%= @project.logline %></p>
      </div>
    <% end %>

    <!-- Idea -->
    <% if @project.idea.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Idea</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @project.idea %></p>
      </div>
    <% end %>

    <!-- Storyline -->
    <% if @project.storyline.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Storyline</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @project.storyline %></p>
      </div>
    <% end %>

    <!-- Sinopsis -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <% if @project.short_synopsis.present? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Sinopsis
            Corta</h2>
          <p class="text-gray-700 whitespace-pre-wrap"><%= @project.short_synopsis %></p>
        </div>
      <% end %>

      <% if @project.long_synopsis.present? %>
        <div class="bg-white shadow rounded-lg p-6 lg:col-span-2">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Sinopsis
            Larga</h2>
          <p class="text-gray-700 whitespace-pre-wrap"><%= @project.long_synopsis %></p>
        </div>
      <% end %>
    </div>

    <!-- Mundo -->
    <% if @project.world.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Mundo / Universo
          Narrativo</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @project.world %></p>
      </div>
    <% end %>

    <!-- Temas -->
    <% if @project.themes.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Temas</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @project.themes %></p>
      </div>
    <% end %>

    <!-- Personajes (Resumen) -->
    <% if @project.characters_summary.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Resumen de
          Personajes</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @project.characters_summary %></p>
      </div>
    <% end %>

    <!-- Estado vacío si no hay información -->
    <% if @project.tone.blank? && @project.logline.blank? && @project.idea.blank? && @project.storyline.blank? && @project.short_synopsis.blank? && @project.long_synopsis.blank? && @project.world.blank? && @project.themes.blank? && @project.characters_summary.blank? %>
      <div class="text-center py-12 bg-white shadow rounded-lg">
        <%= heroicon "document-text", size: "12", class: "mx-auto text-gray-400" %>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Sin información de
          tratamiento</h3>
        <p class="mt-1 text-sm text-gray-500">Empieza con un logline, idea o storyline para definir tu proyecto.</p>
        <div class="mt-6">
          <%= link_to "Agregar Información", edit_project_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
        </div>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="relative">
      <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center">
        <span class="px-3 bg-gray-50 text-sm text-gray-500">Estructura Dramática</span>
      </div>
    </div>

    <!-- Resumen de Estructura -->
    <% if @project.acts.any? %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-2">
            <h2 class="text-xl font-semibold text-gray-900">Estructura</h2>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
              Vista Resumida
            </span>
          </div>
          <%= link_to project_structure_path(@project), class: "text-primary hover:text-primary-900 text-sm font-medium" do %>
            Ver tablero completo →
          <% end %>
        </div>

        <div class="space-y-4">
          <% @project.acts.ordered.each do |act| %>
            <div class="border-l-4 border-primary pl-4">
              <h3 class="font-semibold text-gray-900"><%= act.title %></h3>
              <% if act.description.present? %>
                <p class="text-sm text-gray-600 mt-1"><%= act.description.truncate(150) %></p>
              <% end %>
              <% if act.sequences.any? %>
                <div class="mt-2 text-xs text-gray-500">
                  <%= pluralize(act.sequences.count, "secuencia") %> •
                  <%= pluralize(act.scenes.count, "escena") %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg p-8">
        <div class="text-center">
          <%= heroicon "queue-list", size: "10", class: "mx-auto text-gray-400" %>
          <h3 class="mt-3 text-sm font-medium text-gray-900">Sin estructura dramática</h3>
          <p class="mt-2 text-sm text-gray-500">Organiza tu narrativa creando actos, secuencias y escenas.</p>
          <div class="mt-4">
            <%= link_to project_structure_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition" do %>
              <%= heroicon "plus", class: "-ml-1 mr-2 h-5 w-5" %>
              Ir a Estructura
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Scroll to Top Button -->
  <button type="button"
          data-scroll-to-top-target="button"
          data-action="click->scroll-to-top#scrollToTop"
          class="hidden fixed bottom-6 right-6 z-40 p-3 sm:p-4 bg-primary text-white rounded-full shadow-lg hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-300 opacity-0"
          aria-label="Scroll to top">
    <%= heroicon "arrow-up", size: "6", class: "sm:h-6 sm:w-6" %>
  </button>
</div>
