<%= form_with(model: [ sequence.act.project, sequence ],
              html: { data: { turbo_frame: "_top" } },
              class: "space-y-4") do |form| %>
  <%= render "shared/form_errors", object: sequence %>

  <!-- Acto (hidden si ya existe) -->
  <% if sequence.new_record? %>
    <%= form.hidden_field :act_id, value: sequence.act_id %>
    <div class="bg-indigo-50 border border-indigo-200 rounded-md p-3">
      <p class="text-sm text-indigo-800">
        <span class="font-medium">Acto:</span> <%= sequence.act.title %>
      </p>
    </div>
  <% end %>

  <!-- Título -->
  <div>
    <%= form.label :title, "Título de la Secuencia *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title,
                        required: true,
                        maxlength: 100,
                        autofocus: true,
                        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                        placeholder: "Ej: Secuencia A, Presentación del protagonista..." %>
  </div>

  <!-- Descripción -->
  <div>
    <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
                       rows: 4,
                       class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                       placeholder: "Describe qué sucede en esta secuencia..." %>
  </div>

  <!-- Botones -->
  <div class="flex items-center justify-end space-x-3 pt-4 border-t">
    <button type="button"
            data-action="click->structure#closeModal"
            class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
      Cancelar
    </button>
    <%= form.submit (sequence.persisted? ? "Actualizar Secuencia" : "Crear Secuencia"),
                    class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>