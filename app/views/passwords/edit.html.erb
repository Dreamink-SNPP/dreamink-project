<div class="min-h-screen flex items-center justify-center bg-gradient-auth py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo y título -->
    <div>
      <div class="flex justify-center text-primary">
        <%= heroicon "film", size: "16", class: "text-primary" %>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Restablecer contraseña
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Ingresá tu nueva contraseña
      </p>
    </div>

    <!-- Formulario de restablecimiento -->
    <div class="mt-8 bg-white py-8 px-4 shadow-xl rounded-lg sm:px-10">
      <%= form_with url: reset_password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
        <!-- Errores -->
        <% if @user&.errors&.any? %>
          <div class="rounded-md bg-red-50 p-4 border border-red-200">
            <div class="flex">
              <div class="shrink-0">
                <%= heroicon "x-circle", size: "5", class: "text-red-400" %>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> impidió restablecer tu contraseña:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Nueva contraseña -->
        <div>
          <%= form.label :password, "Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password,
                                    required: true,
                                    autofocus: true,
                                    autocomplete: "new-password",
                                    maxlength: 72,
                                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary focus:border-primary sm:text-sm",
                                    placeholder: "Mínimo 6 caracteres" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">La contraseña debe tener al menos 6 caracteres</p>
        </div>

        <!-- Confirmar contraseña -->
        <div>
          <%= form.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password_confirmation,
                                    required: true,
                                    autocomplete: "new-password",
                                    maxlength: 72,
                                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary focus:border-primary sm:text-sm",
                                    placeholder: "Repetí tu nueva contraseña" %>
          </div>
        </div>

        <!-- Submit -->
        <div>
          <%= form.submit "Restablecer Contraseña",
                          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-150 ease-in-out cursor-pointer" %>
        </div>

        <!-- Link a Login -->
        <div class="text-center border-t border-gray-200 pt-4">
          <p class="text-sm text-gray-600">
            ¿Recordaste tu contraseña?
            <%= link_to "Volver al inicio de sesión", login_path, class: "font-medium text-primary hover:text-primary" %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- Footer -->
    <p class="mt-2 text-center text-sm text-gray-600">
      Proyecto de código abierto con fines educativos
    </p>
  </div>
</div>
