# Environment variables for Docker Compose Production Setup
# Copy this file to .env in the project root before running docker compose

# Database Configuration
# These must match between the postgres service and the Rails web service
DATABASE_USERNAME=dreamink_user
DATABASE_PASSWORD=dreamink_password
DATABASE_PORT=5432

# Rails Secret Key
# Generate a new one with: openssl rand -hex 64
# Leave empty to auto-generate (not recommended for persistent deployments)
SECRET_KEY_BASE=

# Rails Environment
RAILS_ENV=production

# SSL Configuration (for local/LAN deployment, keep these as false)
RAILS_FORCE_SSL=false
RAILS_ASSUME_SSL=false
